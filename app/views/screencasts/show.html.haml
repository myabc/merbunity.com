- throw_content :for_header do
  = @screencast.title

= partial :detail, :with => @screencast, :as => "screencast"

- with_pending @screencast do
  - @comments_url = url(:add_pending_comment, :id => @screencast, :klass => "Screencast")
  = partial "shared/comments/comments", :with => @screencast.pending_comments, :as => "comments", :comment_page_heading => "Comments about this pending screencast"
  
- with_published @screencast do
  - @comments_url = url(:add_comment, :id => @screencast, :klass => "Screencast")
  = partial "shared/comments/comments", :with => @screencast.comments, :as => "comments", :comment_page_heading => "Comments"



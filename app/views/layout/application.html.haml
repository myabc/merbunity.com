!!!
%html{html_attrs}
  %head
    %title 
      Merbunity - 
      = page_title
    %meta{ "http-equiv" => "content-type", :content => "text/html; charset=utf-8"}
    = css_include_tag :master
    %script{:type => "text/javascript", :src => "http://jquery.com/src/jquery-latest.pack.js"}
    = js_include_tag "chili/jquery.chili.pack", "application"
    %script
      ChiliBook.recipeFolder     = "/javascripts/chili/js/";  
      ChiliBook.stylesheetFolder = "/javascripts/chili/css/";
  %body
    #header
      %h1 Merbunity
      %h2 A Merb Community
      %p News, projects and tutorials devoted to the Merb web framework
      = partial "shared/people/login_box"  
      
    #content
      %ul#mainNav
        = list_of(site_navigation_links) do |link| 
          = link
          
      %h2= catch_content :for_header
      - unless flash.empty?
        - flash_type = flash.keys.sort.first
        %div{:class => "flash #{flash_type}"}
          = flash[flash_type]
      #content_box
        = catch_content :for_layout
  
      #side_content
        -if self.respond_to?(:section_menu_items) && !section_menu_items.empty?
          .box
            %h3= section_menu_header
            %ul.section_menu
              = list_of(section_menu_items) do |link|
                = link
        
        -if thrown_content? :non_publisher_help 
          = catch_content(:non_publisher_help)
        
        -if thrown_content? :for_object_menu
          = catch_content(:for_object_menu)
            

!!!
%html{html_attrs}
  %head
    %title 
      Merbunity - 
      = page_title
    %meta{ "http-equiv" => "content-type", :content => "text/html; charset=utf-8"}
    = css_include_tag :master
  %body
    #page
      #header
        %h1 Merbunity
        
        #login_box
          -if logged_in?
            =link_to "Logout", url(:logout)
          -else
            =link_to "Login", url(:login)
          
          
        %ul.site_navigation
          = list_of(site_navigation_links) do |link| 
            = link
        
          
      #main_content 
        %h2= catch_content :for_header
        = catch_content :for_layout
    
    
      #side_content
        -if self.respond_to?(:section_menu_items)
          .box
            %h3= section_menu_header
          %ul.section_menu
            = list_of(section_menu_items) do |link|
              = link

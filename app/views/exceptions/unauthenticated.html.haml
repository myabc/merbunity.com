- @page_title     = "Login"
- @page_id        = "login"
- @login_param    = Merb::Authentication::Strategies::Basic::Base.login_param
- @password_param = Merb::Authentication::Strategies::Basic::Base.password_param

= form(:action => slice_url(:merb_auth_slice_password, :perform_login), :method => :put) do
  = error_messages_for session.authentication
  = text_field(@login_param, :id => @login_param, :label => @login_param.to_s.capitalize)
  = password_field(@password_param, :id => @password_param, :label => @password_param.to_s.capitalize)
  = submit("Login", :id => "save-form")
